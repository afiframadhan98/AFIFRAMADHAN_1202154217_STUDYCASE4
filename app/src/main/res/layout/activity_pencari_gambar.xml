<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.android.afiframadhan_1202154217_studycase4.PencariGambar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/linkgambar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan URL Gambar" />

    <Button
        android:id="@+id/btnmencari"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/green"
        android:text="klik untuk mencari gambar"
        android:textStyle="bold"
        android:onClick="cariGambar"/>

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="350dp"
        android:layout_height="350dp" />

</LinearLayout>

