<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context="com.example.android.afiframadhan_1202154217_studycase4.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to AsyncTask!"
        android:textColor="@color/colorAccent"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:layout_marginBottom="20sp"/>

    <Button
        android:id="@+id/listmahasiswa"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Nama Mahasiswa"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:onClick="listNamaMahasiswa"/>

    <Button
        android:id="@+id/carigambar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pencari gambar"
        android:textStyle="bold"
        android:background="@color/green"
        android:onClick="pencariGambar"/>

</LinearLayout>
